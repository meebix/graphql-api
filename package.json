{
  "name": "graphql-api",
  "version": "1.0.0",
  "description": "A GraphQL API server built using Express.js, GraphQL, Prisma, and MySQL",
  "license": "MIT",
  "private": false,
  "main": "dist/app.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/meebix/node-api.git"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "author": {
    "name": "Michael Donahue",
    "email": "mtdonahue1@gmail.com",
    "url": "https://github.com/meebix/node-api"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && babel src -d dist --extensions '.ts,.tsx' --copy-files",
    "start": "NODE_ENV=production node -r ts-node/register -r tsconfig-paths/register dist/app.js",
    "dev": "ts-node -r tsconfig-paths/register src/app.ts",
    "watch": "nodemon src/app.ts --exec 'ts-node -r tsconfig-paths/register'",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project .",
    "prettier:fix": "prettier \"**/*.{ts,tsx}\" --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:deploy": "prisma deploy",
    "db:seed": "prisma seed",
    "db:seed:reset": "yarn db:seed --reset",
    "db:reset": "prisma reset",
    "db:admin": "prisma admin",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "argon2": "0.21.0",
    "assign-deep": "^1.0.0",
    "chance": "^1.0.18",
    "config": "3.0.1",
    "cors": "2.8.5",
    "date-fns": "1.30.1",
    "express": "4.16.4",
    "express-healthcheck": "0.1.0",
    "express-pino-logger": "^4.0.0",
    "graphql": "^14.2.1",
    "graphql-middleware": "^3.0.2",
    "graphql-shield": "^5.3.2",
    "helmet": "3.16.0",
    "jsonwebtoken": "8.5.1",
    "merge-graphql-schemas": "^1.5.8",
    "pino": "^5.12.2",
    "pino-pretty": "^2.6.0",
    "prisma": "^1.29.2",
    "prisma-client-lib": "^1.29.2",
    "sparkpost": "^2.1.3",
    "stripe": "^6.29.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/travis-cli": "^7.5.2",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@types/config": "^0.0.34",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/helmet": "^0.0.43",
    "@types/node": "^11.13.2",
    "@types/sparkpost": "^2.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.11",
    "semantic-release": "^15.13.3",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "concurrent": true,
    "linters": {
      "*.{ts,tsx}": [
        "yarn lint --fix",
        "yarn prettier:fix",
        "git add"
      ]
    }
  }
}
