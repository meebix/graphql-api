{
  "name": "node-api",
  "version": "1.0.0",
  "description": "Fully Featured Node.js API with MySQL DB",
  "author": "Mike Donahue <mtdonahue1@gmail.com>",
  "scripts": {
    "build": "yarn clean && tsc",
    "start:dev": "node dist/app.js | bunyan",
    "start": "NODE_ENV=production node dist/app.js | bunyan",
    "nodemon": "nodemon dist/app.js | bunyan",
    "watch": "tsc -w --outDir dist",
    "test": "NODE_ENV=test nyc mocha 'src/**/*.test.js'",
    "test:bb": "NODE_ENV=test mocha 'src/**/*.test.bb.js' --timeout 30000 --exit",
    "test:watch": "NODE_ENV=test nodemon --exec \"mocha 'src/**/*.test.js'\"",
    "lint-js": "eslint 'config/*.js' 'src/**/*.js'",
    "lint-ts": "tslint 'src/**/*.ts'",
    "db:migrate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run --config config/orm",
    "db:migrate:undo": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert --config config/orm",
    "db:sync:log": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:log --config config/orm",
    "db:sync": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:sync --config config/orm",
    "db:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop --config config/orm",
    "seed": "ts-node -r tsconfig-paths/register",
    "copy-files": "copyfiles -f src/api/graphql/user/*.graphql dist/api/graphql/user",
    "clean": "rimraf dist/*",
    "mysql:restart": "mysql.server restart"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 75,
    "statements": 75,
    "functions": 75,
    "branches": 75,
    "include": [
      "src/api/**",
      "src/middleware/**",
      "!src/models/**"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "main": "src/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sidewalksalsa/node-api.git"
  },
  "dependencies": {
    "accesscontrol": "1.5.3",
    "apollo-server-express": "1.4.0",
    "app-module-path": "2.2.0",
    "argon2": "0.19.3",
    "body-parser": "1.18.3",
    "bunyan": "1.8.12",
    "bunyan-prettystream": "0.1.3",
    "chance": "^1.0.16",
    "class-validator": "0.9.1",
    "config": "1.30.0",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "csurf": "1.9.0",
    "date-fns": "1.29.0",
    "express": "4.16.3",
    "express-healthcheck": "0.1.0",
    "graphql": "0.13.2",
    "graphql-resolvers": "0.2.2",
    "graphql-tools": "^3.1.1",
    "helmet": "3.13.0",
    "jsonwebtoken": "8.3.0",
    "lodash.difference": "4.5.0",
    "md5": "2.2.1",
    "morgan": "1.9.0",
    "morgan-json": "1.1.0",
    "mysql2": "1.6.1",
    "object-path": "0.11.4",
    "pretty-hrtime": "1.0.3",
    "reflect-metadata": "0.1.12",
    "response-time": "2.3.2",
    "rimraf": "2.6.2",
    "source-map-support": "^0.5.8",
    "sparkpost": "2.1.2",
    "stripe": "6.7.0",
    "twilio": "3.19.1",
    "typeorm": "0.2.7",
    "uuid": "3.3.2",
    "verror": "1.10.0"
  },
  "devDependencies": {
    "@types/config": "0.0.34",
    "@types/graphql": "0.13.4",
    "@types/node": "10.5.7",
    "chai": "4.1.2",
    "copyfiles": "^2.0.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-plugin-import": "2.13.0",
    "mocha": "5.2.0",
    "nodemon": "1.18.3",
    "nyc": "11.2.1",
    "proxyquire": "2.0.1",
    "sinon": "5.0.7",
    "supertest": "3.1.0",
    "ts-node": "^7.0.0",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "2.9.1"
  },
  "private": true,
  "license": "MIT"
}
